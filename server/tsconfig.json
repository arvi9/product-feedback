{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "typeRoots": [
      "types"
    ],
    "paths": { "@t/*": ["../types/*"], }
  },
  "exclude": [
    "node_modules",

    // Exclude because Jest doesn't like it.
    "tests/*.ts",
    "config.ts"
  ],
  "include": [
    "src",
    "database",
    "knexfile.ts",
  ]
}
