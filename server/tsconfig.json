{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "typeRoots": [
      "types"
    ],
    "baseUrl": ".",
    "paths": { "@t/*": ["../types/*"], }
  },
  "exclude": [
    "node_modules",

    // Exclude because Jest doesn't like it.
    "tests/*.ts",
    "config.ts"
  ],
  "include": [
    "src",
    "database",
    "../types",

    // Include for linting.
    "tests/*.ts",
    "config.ts"
  ]
}
